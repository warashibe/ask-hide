{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["/*"],
      "@/components/*": ["components/*"],
      "@/ic/*": ["ic/*"],
      "@/ic/generated/*": [".dfx/local/canisters/*"],
      "@/eth/*": ["eth/*"],
      "@/store/*": ["store/*"],
      "@/svg/*": ["svg/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "ic/actor.js"],
  "exclude": ["node_modules"]
}
